// Test for-loop vs while-loop consistency
print("=== LOOP TYPE CONSISTENCY TESTS ===")

print("Test 1: For-loop with 1.2M iterations")
mut sum1 = 0
for i in 0..1200000:
    sum1 = sum1 + i
print("For-loop 1.2M result:", sum1)

print("Test 2: While-loop with 1.2M iterations (equivalent)")
mut sum2 = 0
mut i = 0
while i < 1200000:
    sum2 = sum2 + i
    i = i + 1
print("While-loop 1.2M result:", sum2)

print("Test 3: For-loop with 15M iterations (should stop at 10M)")
mut count3 = 0
for i in 0..15000000:
    count3 = count3 + 1
    if count3 % 1000000 == 0:
        print("For-loop progress:", count3)
print("For-loop 15M result:", count3)

print("This should not print")